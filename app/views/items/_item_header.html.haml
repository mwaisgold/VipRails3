.BigContainer
  #pathcateg
    .backlist
      %span#listButton{ :style => "position: relative; width: 250px; height: 20px;" }
    .breadcrumb
      - for category in @categories
      - if !category.category.nil?
      %img{ :src => "/org-img/prod/arrow_categ.gif", :border => "0", :height => "10", :width => "13" }
      - end
      %a.path1{ :href => "/jm/search?as_categ_id=#{category.id}" }
        = category.name
      - end
